<div class = "contact-us-page">
    <div class = "heading-for-contact-page">
         <h1 class='title'>Contact Us</h1>
         <p>Have a feature request? Want to know more about us? Contact us here:</p>
    </div>
    <div class = 'contact-form'>
        <form id = "contact-form">
            <div id = "info-for-contact">
                <p>Name</p>
                <input type = "text" id = "name" value = "name" name = "name" required>
                <p>Email</p>
                <input type = "text" id = "email" value = "email" name = "email" required>
            </div>
            <div id = "message-for-contact">
                <p>Message</p>
                <input type = "text" id = "message" value = "message" name = "message">
            </div>
            <input type = "submit" id = "contact-submit-button" value = "submit">
        </form>
    </div>
</div>