<div id='pat-default-info'>
  <div class='dash-header'>
    <div style='display: flex; gap: 20px;'>
      <img src='.././images/sampleAvatar.jpg' class='avatar' />
      <div class='flex-column pat-info'>
        <p><b id='pat_name' style='font-size: 25px'>{{patientName}}</b></p>
        <p id='email'><b>Email: </b>{{patinetEmail}}</p>
        <p id='phoneNo'><b>Phone number: </b>{{patientPhoneNo}}</p>
        <p id='dob'><b>Date of birth: </b>{{patientDob}}</p>
      </div>
    </div>
    <div class='flex-column' style='gap: 10px;'>
      <button class='cli-btn cli-btn-white'>View notes<i
          class='fa fa-sticky-note cli-btn-icon'
        ></i></button>
      <button class='cli-btn cli-btn-default'>View messages<i
          class='fa fa-commenting-o cli-btn-icon'
        ></i></button>
    </div>
  </div>
  <hr style='border: 2px solid #292929;' />
</div>