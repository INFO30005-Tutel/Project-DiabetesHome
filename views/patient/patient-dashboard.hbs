<div class = "patient-dashboard">
   
    <div class = "icon">
         <h2>Today's tasks</h2>
        <div>
            <span class = "task" id = "glucose"><div><img src = "../images/Blood-glucose.png" /><p>Blood Glucose</p></div></span>
            <span class = "task" id = "insulin"><div><img src = "../images/Insulin-input.png"/><p>Insulin Doses</p></div></span>
        </div>
        <div>
            <span class = "task" id = "exercise"><img src = "../images/Exercise-input.png" /><p>Exercise</p></span>
            <span class = "task" id = "weight"><img src = "../images/Weight-input.png"/><p>Weight</p></span>
        </div>
    </div>
     <div class = "pop-up" id = "glucose-popup">
            <div class ="exit-button"><i class="lni lni-close"></i></div>
            <h3 id = "form-title">Blood glucose</h4>
             <form id = "glucose-form">  
                <input type = 'hidden' name = 'type' value ='0'/>
                    <div>
                        <input type = "text" placeholder="Input here" name = "data" required>
                        <label for = "enter-data" id = "unit" name = "unit">nmod/L</label>
                </div>
                        <p>Notes</p>
                        <div>
                            <input class = "note" type = "text" placeholder= "Input text here" name = "note" required/>                                                                                                                                                                                               
                        </div>
                        <div>
                            <input class = "submit button" type = "submit" value = "View data">
                            <input class = "submit button" type = "submit" value = "Submit" id = "submit-button">
                        </div>
                </form>   
            {{/unless}}
            {{#if userData.bloodGlucose}}
            {{#with userData.bloodGlucose}}
            <div class = "completed-task.active">
                <p class = "data-given">{{data}}</p>
                <p>Notes</p>
                <p class = "note-given">{{note}}</p>
                <button>View & edit</button>
            </div>
            {{/with}}  
            {{/if}}
        </div>
        <div class = "pop-up" id = "insulin-popup">
            <div class ="exit-button"><i class="lni lni-close"></i></div>
            <h3 id = "form-title">Insulin doses</h4>
            {{#unless userData.insulinDoses}}
             <form id = "insulin-form" method = 'POST' action = '/userdata'>  
                <input type="hidden" name="type" value="2"/> 
