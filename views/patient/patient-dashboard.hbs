                            <input type = "text" placeholder="Input here" name = "data">
                            <label for = "enter-data" id = "unit" name = "unit">doses</label>
                    </div>
                        <p>Notes</p>
                        <div>
                            <input class = "note" type = "text" placeholder= "Input text here" name = "note">                                                                                                                                                                                               </li>
                        </div>
                        <div>
                            <input class = "submit button" type = "submit" value = "View data">
                            <input class = "submit button" type = "submit" value = "Submit" id = "submit-button">
                        </div>
                </form>  
            {{/unless}}
            {{#if userData.insulinDoses}}
            {{#with userData.insulinDoses}} 
                <div class = "completed-task.active">
                            <p class = "data-given">{{data}}</p>
                            <p>Notes</p>
                            <p class = "note-given">{{note}}</p>
                            <button>View & edit</button>
                </div>
            {{/with}}
            {{/if}}  
        </div>
           <div class = "pop-up" id= "exercise-popup">
